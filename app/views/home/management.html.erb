            <li>
              <%= link_to("about","/about",class: "header-font") %>
            </li>
            <li>
              <%= link_to("gallery","/gallery",class: "header-font") %>
            </li>
            <li>
              <%= link_to("works","/works",class: "header-font") %>
            </li>
            <li>
              <%= link_to("news","/news",class: "header-font") %>
            </li>
            <li>
              <%= link_to("contact","/contact",class: "header-font") %>
            </li>
