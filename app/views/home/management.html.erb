        </ul>
      </div>
    </div>
    </div>
    <div class="main-management">
      <div class="m_content">
        <div class="m-manu">
          <ul>
            <li><%= link_to("gallery画像投稿","/gallery/new") %></li>
            <li><%= link_to("work画像投稿","/works/new") %></li>
            <li><%= link_to("news投稿","/")%></li>
